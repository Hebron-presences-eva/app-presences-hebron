    const membresResult = await pool.query(
      `SELECT id, nom, groupe_id
       FROM membres 
       WHERE groupe_id = $1
       ORDER BY nom ASC`,
      [groupeId]
    );

    console.log(`üë• ${membresResult.rows.length} membres trouv√©s`);

    


    const presencesResult = await pool.query(
      `SELECT membre_id, 
